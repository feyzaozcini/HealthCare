@page "/test-statistics-report"

@using Pusula.Training.HealthCare.TestProcesses
@using Syncfusion.Blazor.Charts

@inject ITestProcessesAppService TestProcessesAppService

<SfAccumulationChart Title="Toplam İstenen Test Sayısı">
    <AccumulationChartSeriesCollection>
        <AccumulationChartSeries Type="AccumulationType.Pie"
                                 DataSource="TestCounts"
                                 XName="TestName"
                                 YName="Count"
                                 Name="Testler">
        </AccumulationChartSeries>
    </AccumulationChartSeriesCollection>
    <AccumulationChartLegendSettings Visible="true" Position="LegendPosition.Right"></AccumulationChartLegendSettings>
</SfAccumulationChart>


<SfAccumulationChart Title="Test Grubuna Göre Toplam İstenen Test Sayısı">
    <AccumulationChartSeriesCollection>
        <AccumulationChartSeries Type="AccumulationType.Pie"
                                 DataSource="TestGroupCounts"
                                 XName="TestName"
                                 YName="Count"
                                 Name="Test Grupları">
        </AccumulationChartSeries>
    </AccumulationChartSeriesCollection>
    <AccumulationChartLegendSettings Visible="true" Position="LegendPosition.Right"></AccumulationChartLegendSettings>
</SfAccumulationChart>



